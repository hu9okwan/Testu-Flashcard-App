<% if (message.length > 0) { %>
    <div class="alert alert-danger alert-dismissible text-center" role="alert">
        <%= message[0].failure %> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>
<div class="container">
  <form method="POST" action="/register">
    <header class="mb-5"> 
        <h3 class="text-center pt-4 pb-4">
            <img src="/imgs/register.svg" height="50px" width="50px" alt="Register Icon">
            Register
        </h3>
    </header>
    <div class="mx-auto" style="width: 50%;">
    <div class="form-group">
        <input class="" id="new-name" placeholder="John Smith" name="name" required>
        <label for="name" class="label-font">Full Name</label>
    </div>
    <div class="form-group">
        
        <input type="email" class="" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email" autocomplete="new-email" required>
        <label for="exampleInputEmail1" class="label-font">Email Address</label>

    </div>
    <div class="form-group">
        <input type="password" class="" id="exampleInputPassword1" placeholder="Password" autocomplete="new-password" name="password" required>
        
    </div>
    <div class="form-group">
        <input type="password" class="" id="exampleInputPassword2" placeholder="Confirm password" required>
        <label for="exampleInputPassword1" class="label-font">Password</label>
    </div>
    
    <button type="submit" class="lined hover-dark float-right">Submit</button>
</div>
  </form>
  
</div>

<script>

let password = document.getElementById("exampleInputPassword1")
let passwordConfirm = document.getElementById("exampleInputPassword2");

function validatePassword() {

    if (password.value !== passwordConfirm.value) {
        passwordConfirm.setCustomValidity("Passwords do not match");
    } else {
        passwordConfirm.setCustomValidity('');
    }
}
password.onchange = validatePassword;
passwordConfirm.onkeyup = validatePassword;

</script>